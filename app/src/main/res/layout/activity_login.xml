<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/w1"
    android:gravity="center"
    android:orientation="vertical">

    <EditText
        android:layout_marginTop="30dp"
        android:id="@+id/login_phone"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@drawable/edit_bc"
        android:hint="手机号"
        android:lines="1"
        android:inputType="number"
        android:maxLength="11"
        android:paddingLeft="5dp"
        android:textSize="10sp" />

    <EditText
        android:id="@+id/login_code"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/edit_bc"
        android:hint="输入密码"
        android:lines="1"
        android:inputType="textPassword"
        android:maxLength="16"
        android:paddingLeft="5dp"
        android:textSize="10sp" />
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/et_lg_yzm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/edit_bc"
            android:hint="请输入验证码"
            android:inputType="number"
            android:lines="1"
            android:paddingLeft="5dp"
            android:textSize="10sp" />

        <View
            android:layout_width="8dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/btn_lg_yzm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/tv_yellow"
            android:gravity="center"
            android:lines="1"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="10sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/btn_login"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:background="@drawable/btn_bc"
        android:text="登       录"
        android:textSize="15sp"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/tv_forgot"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:background="@drawable/btn_bc"
        android:text="忘 记 密 码"
        android:textSize="15sp"
        android:textColor="@color/white" />


   <!-- <TextView
        android:id="@+id/btn_zhuce"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="right"
        android:text="立 即 注 册"
        android:textColor="@color/gray"
        android:textSize="12sp" />-->


</LinearLayout>
