<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/w2"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <EditText
        android:id="@+id/et_zc_phone"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginTop="270dp"
        android:background="@drawable/edit_bc"
        android:hint="手机号"
        android:inputType="number"
        android:lines="1"
        android:maxLength="11"
        android:paddingLeft="5dp"
        android:textSize="11sp" />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/et_zc_yzm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@drawable/edit_bc"
            android:hint="请输入验证码"
            android:inputType="number"
            android:lines="1"
            android:paddingLeft="5dp"
            android:textSize="11sp" />

        <View
            android:layout_width="8dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/btn_zhuce_yzm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/tv_yellow"
            android:gravity="center"
            android:lines="1"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="11sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/password1"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_bc"
        android:hint="密码"
        android:inputType="textPassword"
        android:lines="1"
        android:maxLength="16"
        android:paddingLeft="5dp"
        android:textSize="11sp" />

    <EditText
        android:id="@+id/password2"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_bc"
        android:hint="确认密码"
        android:inputType="textPassword"
        android:lines="1"
        android:maxLength="16"
        android:paddingLeft="5dp"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/btn_zhuce_next"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/btn_bc"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/white" />

</LinearLayout>
